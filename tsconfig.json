      "sosse/otion": ["../otion/lib/main.ts"],
      "sosse/dev-socket-client": ["../dev-socket-client/lib/main.ts"],
      "sosse/uni": ["../uni/lib/main.ts"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}
