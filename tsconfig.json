{
  "compilerOptions": {
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "baseUrl": "./node_modules",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "ESNext",
    "module": "commonjs",
    "paths": {
      "react": ["preact/compat"],
      "sosse": ["../lib/main.ts"],
      "sosse/example": ["../example/lib/main.ts"],
      "sosse/preact": ["../preact/lib/main.ts"],
      "sosse/dev-socket-client": ["../dev-socket-client/lib/main.ts"],
      "sosse/iso": ["../iso/lib/main.ts"],
      "sosse/react": ["../react/lib/main.tsx"],
      "sosse/cli": ["../cli/lib/main.ts"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}
